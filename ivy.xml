<ivy-module version="1.1">
  <info organisation="org.gwtmpv" module="gwt-hack" />
  <configurations>
    <conf name="default" extends="compile"/>
    <conf name="compile"/>
    <conf name="sources"/>
    <conf name="provided"/>
    <conf name="test"/>
  </configurations>
  <dependencies defaultconfmapping="%->default,sources()">
    <dependency org="com.google.gwt" name="gwt-user" rev="2.3.0" conf="provided"/>
    <dependency org="com.google.gwt" name="gwt-dev" rev="2.3.0" conf="provided"/>
    <dependency org="com.google.gwt" name="gwt-servlet" rev="2.3.0" conf="compile"/>

    <dependency org="org.gwtmpv" name="gwt-mpv-user" rev="latest.integration" conf="compile"/>
    <dependency org="org.gwtmpv" name="gwt-mpv-dev" rev="latest.integration" conf="provided"/>

    <!-- build time only dependencies -->
    <dependency org="org.gwtmpv" name="gwt-mpv-apt" rev="2.1" conf="provided"/>
    <dependency org="javax.servlet" name="servlet-api" rev="2.5" conf="provided" />

    <!-- test time only dependencies -->
    <dependency org="junit" name="junit" rev="4.8.1" conf="test"/>
  </dependencies>
</ivy-module>
